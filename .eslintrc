{
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "jsx-a11y"
    ],
    "rules": {
        "semi": ["error", "never"],
        "implicit-arrow-linebreak": 0,
        "import/no-named-as-default-member": 0,
        "import/prefer-default-export": 0
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [
              ".js",
              ".jsx"
            ]
          }
        }
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb-base"
    ],
    "env": {
        "browser": true
    }
}